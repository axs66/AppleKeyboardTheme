#!/bin/bash

JB_PREFIX="/var/jb"
THEME_DIR="$JB_PREFIX/Library/Keyboard/Themes"
THEME_PATH="$THEME_DIR/CustomBackground.theme"

# 创建目录结构
mkdir -p "$THEME_DIR"
chmod 755 "$THEME_DIR"

# 设置主题权限
if [ -d "$THEME_PATH" ]; then
    chmod -R 755 "$THEME_PATH"
    chown -R root:wheel "$THEME_PATH"
    find "$THEME_PATH" -type f -exec chmod 644 {} \;
fi

# 刷新UI缓存
uicache --all >/dev/null 2>&1

exit 0
